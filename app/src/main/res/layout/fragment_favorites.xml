<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.sotirisapak.apps.pokemonexplorer.views.favorites.FavoritesViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.favorites.FavoritesFragment"
        android:background="?android:attr/colorBackground">

        <!--
            Misc component...Show the home icon at the top right corner to show
            the edge to edge feature
        -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_favorite_filled"
            app:tint="?colorPrimary"
            android:alpha="0.1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:rotation="-30"
            android:layout_marginEnd="-10dp"
            android:importantForAccessibility="no"/>

        <!-- Region Header layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Assign the header text -->
            <com.google.android.material.textview.MaterialTextView
                style="@style/TextView.Header"
                android:id="@+id/textHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_title_favorites"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginVertical="20dp"/>

            <!-- Button to open the favourites tab -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonBack"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/icon_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:iconSize="26dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="5dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- End -->

        <!-- Region Empty State layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutEmptyState"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/layoutHeader"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="@{viewModel.itemsCount == 0 &amp;&amp; !viewModel.properties.progress? View.VISIBLE : View.GONE}">

            <!-- Layout to center empty state components -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutEmptyStateContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- ImageView to show the empty state icon! -->
                <ImageView
                    android:id="@+id/imageEmptyState"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/image_favorites_empty_state"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="?colorPrimary" />

                <!-- Text to show to empty state prompt -->
                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextView.Header.Item"
                    android:id="@+id/textEmptyStatePrompt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="There is not any favorite pokemon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageEmptyState"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- End -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPokemon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:adapter="@{viewModel.favoritesAdapter}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/layoutHeader"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/rv_item_pokemon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>