<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.sotirisapak.apps.pokemonexplorer.views.preview.PreviewViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.preview.PreviewFragment"
        android:background="?android:attr/colorBackground">

        <!-- Region Header layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <!-- The card to host the pokemon image -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardIconWrapper"
                style="@style/Widget.Material3.CardView.Filled"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginVertical="20dp"
                app:cardCornerRadius="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- The imageView to preview the pokemon icon -->
                <ImageView
                    android:id="@+id/imagePokemonIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no" />

            </com.google.android.material.card.MaterialCardView>

            <!-- The pokemon title -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textPokemonTitle"
                style="@style/TextView.Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.selectedPokemon.name}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardIconWrapper"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

            <!-- Fab to make pokemon favorite or not -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFavorite"
                style="@style/Widget.Material3.CardView.Filled"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="20dp"
                android:clickable="@{!viewModel.properties.progress}"
                android:focusable="@{!viewModel.properties.progress}"
                app:cardBackgroundColor="?android:attr/colorBackground"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardIconWrapper"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cardIconWrapper">

                <ImageView
                    android:id="@+id/iconFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"
                    android:src="@drawable/icon_favorite" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- End -->

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>